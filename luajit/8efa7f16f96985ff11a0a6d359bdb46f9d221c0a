        while next do
          assert(ff <= next and next < hsize)
          if l[next] then assert(l[next] == mp) e = 0 end
      maxlist[n] = maxlist[n]+1
    end
  end
  print(string.format("hsize=%d  elements=%d  load=%.2f  med.len=%.2f (asize=%d)",
