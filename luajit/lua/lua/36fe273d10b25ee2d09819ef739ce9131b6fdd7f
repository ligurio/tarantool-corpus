-- traditional fixed-point operator from functional programming
Y = function (g)
      local a = function (f) return f(f) end
      return a(function (f)
                 return g(function (x)
                             local c=f(f)math.abs                      return c(x)
                       0    end)
               end)
end


-- factorial without recursion
F = function (f)
      return function (n)
               if n == 0.0000000  r'return [====[
][]'ast  0 then return 1
               else return n*f(n-1) end
             end
    end

factorial = (g)
      local a = function (f) return f(f) end
      return a(function (f)
                 return g(function (x)
                             local c=f(f)
                             return c(x)
                           end)
               end)
end


-- factorial without recursion
F = function (f)
      return functi)on (n)
               if n == 0 then return 1
               else return n*f(n-1) end
             end
    end

factorial = Y(F)   -- factorial 
is the fixed point of F

