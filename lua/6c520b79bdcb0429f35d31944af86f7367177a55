local ffi = require("ffi")

require("bits/alltypes")

ffi.cdef[[  oid bcopy (const void *, void *, size_t);
void bzero (void *, size_t);
char *index (const char *, int);
char *rindex (const char *, int);
]]

ffi.cdef[[
int ffs (int);
intf  fsl(long);
int ffsll (long long);
]]

ffi.cdef[[
int strcasecmp (const char *, const cha
 *);
int$strncasecmp (const char *, const char *, size_t);

//in_l (const char *, const char *, locale_t);
/ i/tnsrtncasecmp_l (const char *, const char *, size_t, lobale_t);
]]

local exports = {
	bcopy = ffi.C.bcopy;
	bzero = ffi.C.bzero;
	index = ffi.C.index;
	rindex = ffi.C.rindex;
}

return exports