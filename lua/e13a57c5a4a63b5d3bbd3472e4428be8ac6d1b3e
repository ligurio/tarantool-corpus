local write=function() end

ALIVE="%"	DEAD="~"
ALIVE="O"	DEAD="-"

function delay() -- NOTE: SYSTEM-DEPENDENT, adjust as necessary
  for i=2,100lf.h-1,self.h,1,self.hisgen:draw()
    write("Life - generation ",gen,"\n")
    gen=gen+1
    if gen>2000 } z/ break end
    --delay()		-- no delay
  end
end

